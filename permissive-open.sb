;; filepath: permissive-open.sb
(version 1)

(allow default)

;; プロセス操作を個別に許可
(allow process-exec)
(allow process-fork)
(allow process-exec-interpreter)

;; プロセス実行権限を追加
(allow process-exec
    ;; システムコマンドの実行を許可（setuidバイナリ含む）
    (literal "/bin/ps")
    (literal "/usr/bin/ps")
    (literal "/bin/sh")
    (literal "/bin/bash")
    (literal "/bin/zsh")
    (subpath "/bin")
    (subpath "/usr/bin")
    (subpath "/opt/homebrew/bin")
    (subpath "/usr/local/bin")
    (subpath "/System/Library/Frameworks")
    (subpath "/System/Library/PrivateFrameworks")
    ;; Homebrewのライブラリディレクトリも明示的に許可
    (subpath "/opt/homebrew/Library")
    (subpath "/opt/homebrew/Library/Homebrew")
    ;; Homebrewのシェルスクリプト実行を許可
    (literal "/opt/homebrew/Library/Homebrew/cmd/shellenv.sh")
    ;; ワークフローで使用される可能性のあるスクリプト
    (subpath "/Users/azumag/work/cc-hooks-workflow")
)

;; ファイル実行権限を明示的に追加
(allow file-read-xattr)
(allow file-read-metadata)
(allow file-read-data)

;; プロセス情報読み取り権限を追加
(allow process-info-pidinfo)
(allow process-info-setcontrol)
(allow process-info-dirtycontrol)
(allow process-info-rusage)
(allow process-info-codesignature)
(allow process-info-pidfdinfo)
(allow process-info-pidfileportinfo)
(allow process-info-listpids)

;; プロセス管理に必要な最小権限（psコマンド対応）
(allow mach-lookup)
(allow mach-task-name)
(allow mach-per-user-lookup)

;; システムコール権限を追加
(allow system-info)
(allow system-fsctl)
(allow system-socket)
(allow system-privilege)
(allow system-kext-query)
(allow system-audit)

;; sysctl権限を追加
(allow sysctl-read)
(allow sysctl-write)

;; 追加のシステム権限
(allow iokit-get-properties)
(allow iokit-open)

;; ネットワーク関連の権限（制限付き）
(allow network-outbound
    (remote tcp "*:443")
    (remote tcp "*:80")
)

;; シグナル送信権限（制限付き）
(allow signal (target self))

;; ファイル書き込み権限を個別に設定
(deny file-write-create)
(deny file-write-data)
(deny file-write-mode)
(deny file-write-owner)
(deny file-write-xattr)
(deny file-write-acl)
(deny file-write-times)

(allow file-write-create
    ;; プロジェクトディレクトリを TARGET_DIR として指定する
    (subpath (param "TARGET_DIR"))

    ;; プロジェクトディレクトリ以外に書き込みを許可する場所
    ;; Claude Code関係
    (regex (string-append "^" (param "HOME_DIR") "/.claude"))
    ;; セッション情報をKeychain経由で記録するらしい
    (subpath (string-append (param "HOME_DIR") "/Library/Keychains"))

    ;; 一時ファイル関連
    (subpath "/tmp")
    (subpath "/var/folders")
    (subpath "/private/tmp")
    (subpath "/private/var/folders")
    (subpath (string-append (param "HOME_DIR") "/.cache"))
    (subpath (string-append (param "HOME_DIR") "/Library/Caches"))
    
    ;; Claude Code関連の一時ファイル（より明確な設定）
    (subpath "/tmp/claude")
    (subpath "/private/tmp/claude")

    ;; ワークフロー関連のディレクトリ
    (subpath "/Users/azumag/work/cc-hooks-workflow")

    ;; その他のツール関連。ご利用のツールに合わせて調整してください
    (subpath (string-append (param "HOME_DIR") "/.npm"))
    (subpath (string-append (param "HOME_DIR") "/Library/Homebrew"))
    (subpath "/opt/homebrew")
    (subpath "/usr/bin")
    (subpath "/bin")

    ;; Git関連
    (subpath (string-append (param "HOME_DIR") "/.gitconfig"))
    (subpath (string-append (param "HOME_DIR") "/.git-credentials"))

    ;; STDOUTとか
    (literal "/dev/stdout")
    (literal "/dev/stderr")
    (literal "/dev/null")
    (literal "/dev/dtracehelper")
    ;; TTYデバイス
    (regex "^/dev/tty")
)

(allow file-write-data
    ;; 上記と同じパス
    (subpath (param "TARGET_DIR"))
    (regex (string-append "^" (param "HOME_DIR") "/.claude"))
    (subpath (string-append (param "HOME_DIR") "/Library/Keychains"))
    (subpath "/tmp")
    (subpath "/var/folders")
    (subpath "/private/tmp")
    (subpath "/private/var/folders")
    (subpath (string-append (param "HOME_DIR") "/.cache"))
    (subpath (string-append (param "HOME_DIR") "/Library/Caches"))
    (subpath "/tmp/claude")
    (subpath "/private/tmp/claude")
    (subpath "/Users/azumag/work/cc-hooks-workflow")
    (subpath (string-append (param "HOME_DIR") "/.npm"))
    (subpath (string-append (param "HOME_DIR") "/Library/Homebrew"))
    (subpath "/opt/homebrew")
    (subpath "/usr/bin")
    (subpath "/bin")
    (subpath (string-append (param "HOME_DIR") "/.gitconfig"))
    (subpath (string-append (param "HOME_DIR") "/.git-credentials"))
    (literal "/dev/stdout")
    (literal "/dev/stderr")
    (literal "/dev/null")
    (literal "/dev/dtracehelper")
    ;; TTYデバイス
    (regex "^/dev/tty")
)